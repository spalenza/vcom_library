.library_container
  .folder_directories
    .menu_directory
      = render :partial => 'menu_directory'
    
    .display_folders
        
  .library_content
    .header
      = image_tag("libraries/logo.png")
      .add
        = simple_form_for Vcom.new, html: { multipart: true } do |f|
          = f.file_field :attachment
    .vcom_container
      .search
      
      .vcom_details
        - @vcoms.each do |vcom|
          .vcom_name
            %h2=vcom.name
          .row.vcom_body
            .span6.vcom_header
              .label.label-inverse
                %i.icon-white.icon-user
                Autor
              = vcom.author.email
              %br
              %br

              .label.label-inverse
                %i.icon-white.icon-align-left
                Descrição
              = vcom.description
              %br
              %br
              
              .label.label-inverse
                %i.icon-white.icon-time
                Data de Criação
              = l vcom.registered_at, format: :long
              
            .pull-right
              .span4
                .label.label-inverse
                  %i.icon-white.icon-th-list
                  Estrutura
                  .pull-right
                    = link_to "#" do
                      %i.icon-white.icon-plus-sign
                      EXPANDIR
                .vcom_struct{ id: "vcom-#{vcom.id}" }
                  = raw create_vcom_tree(vcom.body)

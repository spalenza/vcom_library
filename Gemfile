  # jsTree Rails => https://github.com/tristanm/jstree-rails
  gem 'jstree-rails', :git => 'git://github.com/tristanm/jstree-rails.git'
  
  # Compass => https://github.com/Compass/compass-rails
  gem 'compass-rails'
end

